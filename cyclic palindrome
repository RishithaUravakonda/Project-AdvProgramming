#include<stdio.h>
#include<string.h>
void res[100],i=0;
int palindrome(char str1[])
{
	if(str1==strrev(str1))
		return 1;
	else
		return -1;
}
int rotateFront(char str2[])//moving last character to first position
{
	int k,j,flag;
	for(k=0;k<strlen(str2);k++)
    {
    	char temp=str2[strlen(str2)-1];
    	for(j=strlen(str2)-1;j>0;j--)
    		str2[j]=str2[j-1];
    	str2[j]=temp;
    	flag=palindrome(str2);
    	if(flag==1)
    		return k;
    	else
    		continue;
    }
    if(k==strlen(str2))
    	return -1;
}
int rotateBack(char str3[])//moving first character to last position
{
	int k,j,flag;
	for(k=0;k<strlen(str3);k++)
    {
    	char temp=str3[0];
    	for(j=0;j<strlen(str3);j++)
    		str3[j]=str3[j+1];
    	str3[j-1]=temp;
    	flag=palindrome(str3);
    	if(flag==1)
    		return k;
    	else
    		continue;
    }
    if(k==strlen(str3))
    	return -1;
}
int main()
{
	int T,res[10],i=0;
	scanf("%d",&T);
	while(T--!=0)
	{
		int s[100];
		char f1,f2,f3;
		printf("Enter the string:");
		scanf("%[^\n]s",s);
		f1=palindrome(s);
		if (f1==1)
			res[i++]=0;
		else
		{
			f2=rotateFront(s);
			f3=rotateBack(s);
			if(rotateFront(s)<rotateBack(s));
				res[i++]=rotateFront(s);
			else
				res[i++]=rotateBack(s);
		}
	}
	while(i-=1>=0)
	{
		printf("%d\n",res[i]);
	}
}
